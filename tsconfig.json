{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@api*": ["./src/api", "./src/api/*"],
      "@common*": ["./src/common", "./src/common/*"],
      "@config*": ["./src/config", "./src/config/*"],
      "@core*": ["./src/core", "./src/core/*"],
      "@interfaces*": ["./src/interfaces", "./src/interfaces/*"],
      "@languages*": ["./src/languages", "./src/languages/*"],
      "@middlewares*": ["./src/middlewares", "./src/middlewares/*"],
      "@services*": ["./src/services", "./src/services/*"]
    },
    "typeRoots": ["./src/interfaces", "./node_modules/@types" ],
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}